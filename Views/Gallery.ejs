<link rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.css" />
<style>
  .cardContainer_dsg {
    display: inline-block;
    width: 31%;
    height: 300px;
    text-align: center;
    border: 2px solid #ccc;
    margin: 10px;
  }

  .cardContainer_dsg img {
    width: 90%;
    height: 200px;
    object-fit: contain;
    margin-top: 5px;
  }
  .header h2 {
    text-align: center;
  }

  .header a {
    position: absolute;
    top: 0;
    right: 0;
    color: #000;
    border: 2px solid #000;
    text-decoration: none;
    padding: 5px;
    border-radius: 4px;
  }

  .header {
    position: relative;
  }
  form {
    display: inline-block;
  }
</style>

<% if(galleryLength > 0) {%> <% if(galleryCollection.length > 0) { %>
<div class="header">
  <h2>Gallery</h2>
</div>
<% galleryCollection.forEach(function(element,index) { %>
<div class="cardContainer_dsg">
  <img src="/<%= element %>" alt="image" />
  <a href="/replaceImage/<%= _id %>/<%= index %>" class="btn btn-success m-2"
    >Edit</a
  >
  <form action="/deleteImage" method="POST">
    <input type="hidden" value="<%= _id %>" name="id" />
    <input type="hidden" value="<%= element %>" name="imageId" />
    <button class="btn btn-danger" type="submit">Delete</button>
  </form>
</div>
<% }); %> <% } } else {%>
<h2 style="text-align: center">
  Gallery list is empty , please upload a images
</h2>
<% } %>
